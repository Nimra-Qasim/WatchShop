@model Watch_Shop.Models.Account

@{
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}
<!DOCTYPE html>
<html>

<head>
    <title>Home</title>
</head>
<body>

    <!---start-wrap--->

    <div class="content">
        <div class="contact">
            <div class="section group">
                <div class="products-box">
                    <div class="products">
                        <h5>PROFILE</h5>
                        @Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }) 
                        {
                         
                            <div class="col span_1_of_3">
                                <div>
                                    <div>
                                        <span><img src=@Model.Image height="400" width="300" /></span>
                                    </div>
                                    <div> Upload Image: <input type="file" name="Image" /></div>
                                 </div>
                            </div>
                            <div class="col span_3_of_3">
                                <div class="contact-form">
                                    <div>

                                        <div>
                                            <div>
                                                <span><label>First Name: </label></span> <input name="FirstName" value=@Model.FirstName type="text"/>

                                            </div>
                                            <span></span>

                                            <div>
                                                <span><label>Last Name: </label></span><input name="LastName" value=@Model.LastName type="text" />

                                            </div>
                                            <span></span>
                                            <div>
                                                <span><label>Email: </label></span><input name="Email" type="text" class="contact" value=@Model.Email />
                                            </div>
                                            <span></span>
                                            <div>
                                                <span><label>Password: </label></span><input name="Password" type="text" class="contact" value=@Model.Password />
                                            </div>
                                            <span></span>
                                            <div>
                                                <span><label>Gender: </label></span><input name="Gender" type="text" class="contact" value=@Model.Gender />
                                            </div>
                                            <span></span>
                                            <div>
                                                <input type="hidden" name="Id" value=@Model.Id/>
                                            </div>
                                            <div>
                                                <input type="hidden" name="Username" value=@Model.Username />
                                            </div>
                                            
                                            <span></span>
                                            <div>
                                                <span><input type="submit" value="Save"></span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                      }             
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
