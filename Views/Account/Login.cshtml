@model Watch_Shop.Models.Account

@{
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>

</head>
<body>

    <!---header--->
    </div>
    <div class="content">
        <div class="contact">
            <div class="section group">
                <div class="col span_1_of_3">


                </div>
                <div class="col span_2_of_3">
                    <div class="contact-form">
                        <h3>LOGIN</h3>
                       @using (Html.BeginForm("LoginUser", "Account", FormMethod.Post))
                       { 
                           
                            <div>
                                @Html.Label("USERNAME")
                                @Html.TextBoxFor(m => m.Username, new { placeholder = "Enter Username" })
                            


                            </div>
                            <div>
                                @Html.Label("PASSWORD")

                                <span></span>
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Enter password" })
                         
                            </div>

                            <p>
                                @Html.ActionLink("Signup", "Signup") if you don't have an account.
                            </p>
                          
                            <div style="color:red" ><h1><label>@ViewBag.abc</label></h1></div>
                            <div>
                                <span><input type="submit" value="Submit"></span>
                            </div>
    
                       }
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="clear"> </div>

</body>
</html>
