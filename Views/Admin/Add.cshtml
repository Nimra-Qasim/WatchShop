@model Watch_Shop.Models.Watch

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <title>Add Watch</title>

</head>
<body>

    <!---header--->
    </div>
    <div class="content">
        <div class="contact">
            <div class="section group">
                <div class="col span_1_of_3">


                </div>
                <div class="col span_2_of_3">
                    <div class="contact-form">
                        <h3>Add Watches</h3>
                        @using (Html.BeginForm("AddWatch", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div>
                                @Html.Label("Model")
                                @Html.TextBoxFor(m => m.Model, new { placeholder = "Enter Model", required = "required" })


                            </div>
                            <div>
                                @Html.Label("Price")
                                <span></span>
                                @Html.TextBoxFor(m => m.Price, new { required = "required", placeholder = "Enter price" })
                            </div>
                            <div>
                                @Html.Label("Catagory")
                                <span></span>
                                @Html.TextBoxFor(m => m.Catagory, new { required = "required", placeholder = "Enter Catagory" })
                            </div>
                            <div>
                                @Html.Label("Image")
                                <span></span>
                                @Html.TextBoxFor(m => m.Image, new { type="File"})
                            </div>

                            <div>
                                
                            </div>

                           
                            <div>
                                <span><input type="submit" value="Submit" ></span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="clear"> </div>

</body>
</html>
