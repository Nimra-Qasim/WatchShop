<!DOCTYPE html>
<html>
<head>

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/js")
    @Scripts.Render("~/bundles/modernizr")
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/responsiveslides.css">

    <link rel="stylesheet" href="~/Content/responsiveslides.css">
    <link href="~/Content/css/responsiveslides.css" rel="stylesheet" />
  
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="~/Scripts/responsiveslides.min.js"></script>
   
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />


    
</head>
<body>

    <!--start-image-slider---->
 
        <div class="header">
            <!---start-top-header--->

            <div class="sub-header">
                <div class="logo">
                    <a href="/Home/"><img src="~/images/logo1.png" title="logo" /></a>
                </div>
                <div class="sub-header-center">
                    <form class="nav navbar-nav navbar-right" method="post" action="/Home/Search">
                        <input name="Catagory" type="text"><input type="submit" placeholder="Search" value="search" />
                    </form>
                </div>
                @if (Session["name"] != null)
                {
                     <div class="sub-header-right">
                        <ul>
                            <li><img src="@Session["image"]" height="70" width="70"/></li>
                            <li><a href="/Account/Profile/">@Session["name"]</a></li>
                            <li><a href="/Account/Logout/">log Out</a></li>
                    
                            @*<li><a href="#">CART: <img src="~/images/cart.png" title="cart" /></a></li>*@
                        </ul>
                     </div>
                }
            </div>
            @if(Session["name"]==null)
            { 
            <div class="sub-header-right">
                <ul>
                    <li><a href="/Account/Login/">log in</a></li>
                    <li><a href="/Account/SignUp/">Sign Up</a></li>
                    <li><a href="#">CART: <img src="~/images/cart.png" title="cart" /></a></li>
                </ul>
            </div>
            }
       
                 <div class="clear"> </div>

            <div class="top-nav">
                <ul>
                    <li class="active1"><a href="/Home">Home</a></li>
                    <li><a href="/Home/AboutUs/">About Us</a></li>
                    <li><a href="/Home/ContactUs/">Contact Us</a></li>
                    <div class="clear"> </div>
                </ul>
            </div>
            <!---end-top-header--->
            <!---End-header--->
        </div>

        @RenderBody()

        <div class="clear"> </div>
        <div class="footer">
            <div class="wrap">
                <div class="section group">
                    <div class="col_1_of_3 span_1_of_3 footer-lastgrid">
                        <h3>Get in touch</h3>
                        <ul>
                            <li><a href="#"><img src="~/images/facebook.png" title="facebook" /></a></li>
                            <li><a href="#"><img src="~/images/twitter.png" title="Twiiter" /></a></li>
                            <li><a href="#"><img src="~/images/rss.png" title="Rss" /></a></li>
                            <li><a href="#"><img src="~/images/gpluse.png" title="Google+" /></a></li>
                        </ul>
                        <div class="footer">
                            <p>Design by <a href="/Home/">BITF12M537</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
</body>
</html>
